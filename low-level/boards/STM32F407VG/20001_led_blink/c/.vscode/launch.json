{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug ARM",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/001.elf",
        "cwd": "${workspaceFolder}",
        "MIMode": "gdb",
        "miDebuggerPath": "arm-none-eabi-gdb",
        "miDebuggerServerAddress": "localhost:4857",
        "targetArchitecture": "arm",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "text": "set mem inaccessible-by-default off"
          }
        ],
        "launchCompleteCommand": "exec-run",
        "filterStdout": true,
        "filterStderr": true,
        "stopAtEntry": true,
        "externalConsole": false,
        "serverLaunchTimeout": 10000
      }
    ]
  }